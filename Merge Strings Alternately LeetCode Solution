class Solution {
public:
    string mergeAlternately(string word1, string word2) {
        int i=0, j = 0;
        string merge;
        while(i<word1.size() || j<word2.size()) 
        {
            if(i<word1.size()) 
                merge += word1[i++];
            if(j<word2.size()) 
                merge += word2[j++];
            
        }
        return merge; 
    }
};
